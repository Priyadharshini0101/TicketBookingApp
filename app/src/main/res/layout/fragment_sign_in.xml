<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="ticketbookingapp"
        type="com.mycode.ticketbookingapp.model.TicketBookingApp" />
    <variable
        name="signInViewModel"
        type="com.mycode.ticketbookingapp.signin.SignInViewModel" />

</data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/secondlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary">


    <TextView
        android:id="@+id/appname"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginTop="200dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/app_name"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:text="@={ticketbookingapp.username}"
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/signupbox"
        android:fontFamily="sans-serif"
        android:hint="Username"
        android:textColorHint="#918E8E"
        android:inputType="text"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appname" />

    <EditText
        android:text="@={ticketbookingapp.email}"
        android:id="@+id/EmailId"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:background="@drawable/signupbox"
        android:fontFamily="sans-serif"
        android:hint="Email"
        android:textColorHint="#918E8E"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <EditText
        android:text="@={ticketbookingapp.password}"
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/signupbox"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:textColorHint="#918E8E"
        android:layout_margin="16dp"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailId" />

    <Button

        android:id="@+id/Signup"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/buttons"
        android:fontFamily="sans-serif-thin"
        android:text="SignIn"
        android:onClick="@{()->signInViewModel.register(ticketbookingapp.username,ticketbookingapp.email,ticketbookingapp.password)}"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:text="Already have a account?"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.283"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Signup" />

    <TextView
        android:id="@+id/loginPage"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        android:onClick="@{()->signInViewModel.navigateToSignIn()}"
        android:text="SignIn"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/Signup" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>

